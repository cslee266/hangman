      <div class="panel panel-primary" style="margin-top: 10px;">
        <div class="panel-heading">
          <h3 class="panel-title">Friend List</h3>
        </div>
        <div class="panel-body">
	      <table class="table">
	      	<tbody>
	        <% current_user.friends.each do |friend| %>
	        <tr>
	          <td><%= friend.name %></td>
	          	<% if current_user.role == "owner" && !current_user.room.nil? %>
	          		<% if @room.visitor.nil? %>
		          		<%= form_tag room_path(current_user.room.id), method: :patch, class:"invite" do %>
						<%= hidden_field_tag :friend_id, friend.id %>
						<td><%= submit_tag "Invite", class:"btn btn-danger" %></td>
						<% end %>
        			<% end %>
        		<% end %>
			</tr>
			  <% end %>
			</tbody>
	      </table>          

	      </ul>
        </div>
      </div> 